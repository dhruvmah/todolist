var getDate = function(input){
	var date = new Date(0); // The 0 there is the key, which sets the date to the epoch
	date.setUTCSeconds(parseInt(input));
	var dayNumber = date.getDay();
	if(dayNumber == 0) {
		var day = "Sunday";
	} else if(dayNumber == 1) {
		var day = "Monday";
	}else if(dayNumber == 2) {
		var day = "Tuesday";
	}else if(dayNumber == 3) {
		var day = "Wednesday";
	}else if(dayNumber == 4) {
		var day = "Thursday";
	}else if(dayNumber == 5) {
		var day = "Friday";
	}else if(dayNumber == 6) {
		var day = "Saturday";
	}

	var monthNum = date.getMonth();

	if(monthNum == 0) {
		var month = "January";
	} else if(monthNum == 1) {
		var month = "February";
	}else if(monthNum == 2) {
		var month = "March";
	}else if(monthNum == 3) {
		var month = "April";
	}else if(monthNum == 4) {
		var month = "May";
	}else if(monthNum == 5) {
		var month = "June";
	}else if(monthNum == 6) {
		var month = "July";
	}else if(monthNum == 7) {
		var month = "August";
	}else if(monthNum == 8) {
		var month = "September";
	}else if(monthNum == 9) {
		var month = "October";
	}else if(monthNum == 10) {
		var month = "November";
	}else if(monthNum == 11) {
		var month = "December";
	}


	return (day + ", " + month + " " + date.getDate() + ", " + date.getFullYear());
}

